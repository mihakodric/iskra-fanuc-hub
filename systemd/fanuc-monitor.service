[Unit]
Description=FANUC CNC Monitor Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/iskra-fanuc-hub
Environment="PATH=/home/pi/iskra-fanuc-hub/venv/bin"
ExecStart=/home/pi/iskra-fanuc-hub/venv/bin/python -m app.main /home/pi/iskra-fanuc-hub/config.yaml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Environment variables
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
